{
  "name": "typescript-graphql",
  "scripts": {
    "node-watch": "ts-node-dev --respawn --transpile-only src/server",
    "codegen": "graphql-codegen --config codegen.config.ts",
    "codegen-watch": "npm run codegen -- --watch",
    "predev": "npx prisma generate",
    "dev": "concurrently npm:node-watch npm:codegen-watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "^4.0.1",
    "@prisma/client": "^4.5.0",
    "cuid": "^2.1.8",
    "graphql": "^16.5.0",
    "graphql-scalars": "1.19.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.7",
    "@graphql-codegen/typescript": "2.7.4",
    "@graphql-codegen/typescript-resolvers": "2.7.4",
    "@types/graphql": "14.5.0",
    "@types/node": "16.11.66",
    "@types/ws": "8.5.3",
    "concurrently": "^7.4.0",
    "prisma": "^4.5.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
